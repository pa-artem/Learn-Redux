{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES6",
    "strictNullChecks": true,
    "downlevelIteration": true,
    "allowJs": false,
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@features/*": ["src/features/*"],
      "@hooks/*": ["src/hooks/*"],
      "@ui-components/*": ["src/ui-components/*"],
      "@global-styles/*": ["src/global-styles/*"],
      "@util/*": ["src/util/*"]
    }
  },
  "include": ["src"]
}
